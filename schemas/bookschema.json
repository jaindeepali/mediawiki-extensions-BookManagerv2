{
    "description": "Schema against which BookManagerv2 book blocks should be checked.",
    "properties": {
        "title": {
            "description": "Title of the work",
            "type": "string",
            "required": true,
            "additionalProperties": {
                "i18n": "bookmanagerv2-title"
            }
        },
        "alternate_titles": {
            "description": "List of other titles by which the work is known",
            "type": "array",
            "required": false,
            "items": [
                {
                    "type": "string",
                    "required": false
                }
            ],
            "additionalProperties": {
                "i18n": "bookmanagerv2-alternate-titles"
            }
        },
        "authors": {
            "description": "List of contributors to the work",
            "type": "array",
            "required": false,
            "items": [
                {
                    "type": "string",
                    "required": false
                }
            ],
            "additionalProperties": {
                "i18n": "bookmanagerv2-authors"
            }
        },
        "translators": {
            "description": "List of translators who contributed to the work",
            "type": "array",
            "required": false,
            "items": [
                {
                    "type": "string",
                    "required": false
                }
            ],
            "additionalProperties": {
                "i18n": "bookmanagerv2-translators"
            }
        },
        "editors": {
            "description": "List of editors who contributed to the work",
            "type": "array",
            "required": false,
            "items": [
                {
                    "type": "string",
                    "required": false
                }
            ],
            "additionalProperties": {
                "i18n": "bookmanagerv2-editors"
            }
        },
        "illustrators": {
            "description": "List of illustrators who contributed to the work",
            "type": "array",
            "required": false,
            "items": [
                {
                    "type": "string",
                    "required": false
                }
            ],
            "additionalProperties": {
                "i18n": "bookmanagerv2-illustrators"
            }
        },
        "subtitle": {
            "description": "Subtitle to the title of the work",
            "type": "string",
            "required": false,
            "additionalProperties": {
                "i18n": "bookmanagerv2-subtitle"
            }
        },
        "series_title": {
            "description": "Title of the series of which this work is a member",
            "type": "string",
            "required": false,
            "additionalProperties": {
                "i18n": "bookmanagerv2-series-title"
            }
        },
        "volume": {
            "description": "Volume number of the work",
            "type": "number",
            "required": false,
            "additionalProperties": {
                "i18n": "bookmanagerv2-volume"
            }
        },
        "edition": {
            "description": "Edition number of the work",
            "type": "number",
            "required": false,
            "additionalProperties": {
                "i18n": "bookmanagerv2-edition"
            }
        },
        "publisher": {
            "description": "Name of the publisher of this work",
            "type": "string",
            "required": false,
            "additionalProperties": {
                "i18n": "bookmanagerv2-publisher"
            }
        },
        "printer": {
            "description": "Name of the printer of this work",
            "type": "string",
            "required": false,
            "additionalProperties": {
                "i18n": "bookmanagerv2-printer"
            }
        },
        "publication_date": {
            "description": "Date of publication of the work",
            "type": "string",
            "required": false,
            "additionalProperties": {
                "date_format": "YMD",
                "i18n": "bookmanagerv2-publication-date"
            }
        },
        "publication_city": {
            "description": "City in which the work was published",
            "type": "string",
            "required": false,
            "additionalProperties": {
                "i18n": "bookmanagerv2-publication-city"
            }
        },
        "language": {
            "description": "Primary language of the work",
            "type": "string",
            "required": false,
            "additionalProperties": {
                "i18n": "bookmanagerv2-language"
            }
        },
        "description": {
            "description": "Short description of the work",
            "type": "string",
            "required": false,
            "additionalProperties": {
                "i18n": "bookmanagerv2-description"
            }
        },
        "source": {
            "description": "Source of the work",
            "type": "string",
            "required": false,
            "additionalProperties": {
                "i18n": "bookmanagerv2-source"
            }
        },
        "permission": {
            "description": "Licensing permission for works not created on-wiki",
            "type": "string",
            "required": false,
            "additionalProperties": {
                "i18n": "bookmanagerv2-permission"
            }
        },
        "other_versions": {
            "description": "Lists of other versions of this work that are available on the wiki",
            "type": "array",
            "required": false,
            "items": [
                {
                    "type": "string",
                    "required": false
                }
            ],
            "additionalProperties": {
                "i18n": "bookmanagerv2-other-versions"
            }
        },
        "isbn": {
            "description": "International Standard Book Number of the work",
            "type": "string",
            "required": false,
            "additionalProperties": {
                "i18n": "bookmanagerv2-isbn"
            }
        },
        "lccn": {
            "description": "Library of Congress Control Number of the work",
            "type": "string",
            "required": false,
            "additionalProperties": {
                "i18n": "bookmanagerv2-lccn"
            }
        },
        "oclc": {
            "description": "Online Computer Library Center identifier of the work",
            "type": "string",
            "required": false,
            "additionalProperties": {
                "i18n": "bookmanagerv2-oclc"
            }
        },
        "sections": {
            "description": "List of objects representing the sections of the work",
            "type": "array",
            "required": true,
            "items": [
                {
                    "type": "object",
                    "required": false,
                    "properties": {
                        "name": {
                            "description": "Name of the section",
                            "type": "string",
                            "required": true,
                            "additionalProperties": {
                                "i18n": "bookmanagerv2-name"
                            }
                        },
                        "link": {
                            "description": "Name of the wiki page where this section is located",
                            "type": "string",
                            "required": true,
                            "additionalProperties": {
                                "i18n": "bookmanagerv2-link"
                            }
                        },
                        "source": {
                            "description": "The source of the particular section",
                            "required": false,
                            "type": "string",
                            "additionalProperties": {
                                "i18n": "bookmanagerv2-source"
                            }
                        },
                        "indentation": {
                            "description": "The level of indentation for this section",
                            "required": false,
                            "type": "integer",
                            "aditionalProperties": {
                                "i18n": "bookmanagerv2-indentation-field"
                            }
                        }
                    },
                    "additionalProperties": false
                }
            ],
            "additionalProperties": {
                "i18n": "bookmanagerv2-sections"
            }
        }
    },
    "additionalProperties": false
}
